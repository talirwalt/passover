<%= form_for @user, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :password, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :password, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :password_confirmation, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :f_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :f_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :l_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :l_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.email_field :email, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  users_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
